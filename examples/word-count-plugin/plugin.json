{
  "id": "word-count-plugin",
  "name": "Word Count Plugin",
  "version": "1.0.0",
  "description": "Shows live word count, character count, and reading time estimation in the editor",
  "author": "Lokus Team",
  "license": "MIT",
  "main": "index.js",
  "lokusVersion": "^1.0.0",
  "keywords": ["word-count", "statistics", "editor", "productivity"],
  "categories": ["Editor"],
  "permissions": [
    "read_files",
    "modify_ui"
  ],
  "activationEvents": ["onStartup"],
  "contributes": {
    "commands": [
      {
        "command": "word-count.toggle-sidebar",
        "title": "Toggle Word Count Sidebar"
      },
      {
        "command": "word-count.copy-stats",
        "title": "Copy Word Count Statistics"
      }
    ]
  },
  "configuration": {
    "showCharacterCount": {
      "type": "boolean",
      "default": true,
      "description": "Display character count in addition to word count"
    },
    "showReadingTime": {
      "type": "boolean",
      "default": true,
      "description": "Estimate and display reading time"
    },
    "wordsPerMinute": {
      "type": "number",
      "default": 200,
      "minimum": 100,
      "maximum": 500,
      "description": "Words per minute for reading time calculation"
    },
    "excludeCodeBlocks": {
      "type": "boolean",
      "default": false,
      "description": "Don't count words in code blocks"
    }
  }
}