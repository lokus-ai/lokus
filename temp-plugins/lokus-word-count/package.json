{
  "name": "lokus-word-count",
  "version": "0.1.0",
  "description": "A word count plugin for Lokus",
  "author": "Lokus Dev",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugin.json",
    "README.md"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "watch": "node esbuild.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docs:generate": "typedoc",
    "docs:serve": "http-server docs -p 8080",
    "dev": "lokus-plugin dev",
    "package": "lokus-plugin package",
    "publish": "lokus-plugin publish"
  },
  "keywords": [
    "lokus",
    "plugin",
    "editor",
    "typescript",
    "jest",
    "eslint",
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lokus Dev/lokus-word-count.git"
  },
  "bugs": {
    "url": "https://github.com/Lokus Dev/lokus-word-count/issues"
  },
  "homepage": "https://github.com/Lokus Dev/lokus-word-count#readme",
  "engines": {
    "node": ">=16.0.0",
    "lokus": "^1.0.0"
  },
  "dependencies": {
    "@lokus/plugin-sdk": "file:../../packages/plugin-sdk/lokus-plugin-sdk-1.0.1.tgz"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.19.5",
    "typedoc": "^0.25.2",
    "http-server": "^14.1.1"
  }
}