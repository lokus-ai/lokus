{
  "$schema": "https://schema.tauri.app/config/2.0.0/capabilities.json",
  "identifier": "fs-home-scope",
  "description": "Filesystem permissions and HOME scope for all windows.",
  "windows": ["main", "ws-lokus-workspace", "prefs", "ws-*"],
  "permissions": [
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/**/*" }
      ]
    }
  ]
}
