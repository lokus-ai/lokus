<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- ============================================ -->
	<!-- REQUIRED: App Store Sandbox                  -->
	<!-- All App Store apps MUST include this         -->
	<!-- ============================================ -->
	<key>com.apple.security.app-sandbox</key>
	<true/>

	<!-- ============================================ -->
	<!-- Network Access                               -->
	<!-- ============================================ -->

	<!-- Outgoing network connections for syncing, analytics, and cloud features -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- ============================================ -->
	<!-- File System Access                           -->
	<!-- ============================================ -->

	<!-- Allow read/write access to files chosen by the user -->
	<!-- This uses the macOS file picker (NSOpenPanel/NSSavePanel) -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Optional: Bookmark access for recently used files -->
	<!-- Allows the app to remember files the user opened -->
	<key>com.apple.security.files.bookmarks.app-scope</key>
	<true/>

	<!-- ============================================ -->
	<!-- Inter-Process Communication                  -->
	<!-- ============================================ -->

	<!-- Allow automation and clipboard operations -->
	<key>com.apple.security.automation.apple-events</key>
	<true/>

	<!-- ============================================ -->
	<!-- IMPORTANT: Entitlements REMOVED for App Store -->
	<!-- These are incompatible with App Sandbox:     -->
	<!--                                              -->
	<!-- - com.apple.security.cs.allow-jit            -->
	<!-- - com.apple.security.cs.allow-unsigned-executable-memory -->
	<!-- - com.apple.security.cs.disable-library-validation -->
	<!--                                              -->
	<!-- If your app requires these, it can ONLY be   -->
	<!-- distributed outside the App Store via        -->
	<!-- notarization (Developer ID distribution).    -->
	<!-- ============================================ -->
</dict>
</plist>
