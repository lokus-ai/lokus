{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Lokus",
  "version": "../package.json",
  "identifier": "io.lokus.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lokus",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' asset: https://asset.localhost blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob: asset: https://asset.localhost; font-src 'self' data:; connect-src 'self' https: wss: asset: https://asset.localhost; media-src 'self' data: blob: asset: https://asset.localhost; object-src 'none'; frame-src 'self' blob:; base-uri 'self'; form-action 'none'; upgrade-insecure-requests;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**", "$DOCUMENT/**", "$DESKTOP/**", "$DOWNLOAD/**", "$PICTURE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "resources": [
      "../src/themes/",
      "mcp-bundle/"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "backgroundScript": null
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "globalShortcut": {
      "all": true
    },
    "clipboardManager": {
      "all": true,
      "writeText": true,
      "readText": true
    },
    "shell": {
      "open": "^https?://.*"
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDAyNThCNzlGMDI4ODFDODcKUldTSEhJZ0NuN2RZQXVzaVFON296MnE3eUtPMUVKSG5MM2tWMzNCMzJPRDVGRGh3WVYwM0dkdncK",
      "endpoints": [
        "https://config.lokusmd.com/api/updates/latest.json"
      ]
    }
  }
}