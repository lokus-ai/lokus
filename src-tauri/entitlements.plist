<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow JIT compilation for better performance -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow unsigned executable memory (required for some JavaScript engines) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Disable library validation to allow loading frameworks -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>

	<!-- Network access for syncing and updates -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- File system access -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Allow outgoing network connections for auto-updater -->
	<key>com.apple.security.network.server</key>
	<false/>
</dict>
</plist>
