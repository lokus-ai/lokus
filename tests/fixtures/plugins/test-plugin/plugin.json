{
  "id": "test-plugin",
  "name": "Test Plugin",
  "description": "A comprehensive test plugin for testing plugin system functionality",
  "version": "1.0.0",
  "author": "Lokus Test Suite",
  "main": "index.js",
  "permissions": [
    "editor.read",
    "editor.write",
    "storage.read",
    "storage.write",
    "ui.panels",
    "ui.commands"
  ],
  "contributes": {
    "commands": [
      {
        "id": "test-plugin.insert-text",
        "title": "Insert Test Text",
        "description": "Inserts test text into the editor"
      },
      {
        "id": "test-plugin.show-notification",
        "title": "Show Test Notification",
        "description": "Shows a test notification"
      }
    ],
    "panels": [
      {
        "id": "test-panel",
        "title": "Test Plugin Panel",
        "icon": "test-icon",
        "position": "sidebar"
      }
    ],
    "shortcuts": [
      {
        "keys": "Ctrl+Shift+T",
        "command": "test-plugin.insert-text",
        "description": "Test Plugin Action"
      }
    ],
    "slashCommands": [
      {
        "trigger": "test-command",
        "description": "Insert test content",
        "command": "test-plugin.insert-text"
      },
      {
        "trigger": "error-command",
        "description": "Trigger test error",
        "command": "test-plugin.error-command"
      }
    ]
  },
  "settings": {
    "theme": {
      "type": "string",
      "default": "light",
      "description": "Plugin theme preference"
    },
    "autoSave": {
      "type": "boolean",
      "default": false,
      "description": "Enable auto-save functionality"
    },
    "maxItems": {
      "type": "number",
      "default": 10,
      "description": "Maximum number of items to display"
    }
  },
  "engines": {
    "lokus": "^1.0.0"
  }
}